<div class="container">



    <div class="jumbotron text-center bg-primary text-white">

        <h1 class="display-4" id="app-title">Om nom nom<img src="/assets/img/cheeseburger.png"></h1>

        <p class="lead">Bob's Burgers</p>

    </div>



    <div class="row">

        <div class="col-md-12">

            <div class="card border border-primary">

                <div class="card-header bg-primary text-white">

                    What do you want?

                </div>



                <div class="card-body">

                    <form class="create-form">

                        <div class="form-group">

                            <label for="burger">Order here:</label>

                            <input type="text" class="form-control" id="burgerToGo" placeholder="">

                        </div>

                        <button class="btn btn-primary" type="submit">Order</button>

                    </form>

                </div>

            </div>

        </div>

    </div>





    <div class="row mt-4">

        <div class="col-md-6 mt-4">

            <div class="card border border-primary">

                <div class="card-header bg-primary text-white">

                    Boygers

                </div>



                <div class="card-body">

                    {{#each
burgers}}

                    {{#unless
devoured}}

                    {{> 
burgers/burger-block devour=false}}

                    {{/unless}}

                    {{/each}}

                </div>

            </div>

        </div>



        <div class="col-md-6 mt-4">

            <div class="card devoured-card">

                <div class="card-header text-white" id="devoured-card-header">

                    Devoured burgers

                </div>



                <div class="card-body">

                    {{#each
burgers}}

                    {{#if
devoured}}

                    {{> 
burgers/burger-devoured devour=true}}

                    {{/if}}

                    {{/each}}

                </div>

            </div>

        </div>

    </div>



    <!--Footer-->

    <div class="row mt-5">

        <div class="col-md-12">

            <div class="card footer">

                <div class="card-body footer-body text-white">

                    <h5 class="card-title text-white"></h5>

                    <p class="card-text">Om nom nom</p>

                    <a href="https://github.com/ashleyaarndt/burger.git" class="btn btn-primary mr-2"
                        target="_blank">Repo</a>

                </div>

            </div>

        </div>

    </div>

</div>